<h1>New Game</h1>
<div class="sample-wrapper">
  <% @letters.each do |letter| %>
    <div class="sample-letter"><%= letter %></div>
  <% end %>
</div>

<p>What is the longest word you can find?</p>
<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>
  <input type="text" name="suggestion" class="text-input">
  <input type="submit" value="Play" class="submit-button">
</form>
